{
    "manifest_version": 2,

    "name": "News Article Summarizer",
    "description": "This extension allows you to summarize news articles.",
    "version": "1.0",
    "background": {
	"scripts": ["background.js"],
	"persistent": false
    },
    "permissions": [
	"declarativeContent",
	"http://www.nytimes.com/*",
	"http://news.yahoo.com/*",
    "http://localhost:8000/*",
	"tabs"
    ],

     "web_accessible_resources": [
    "circle-loading-animation.gif"
  ],

    "page_action": {
	"default_icon": "icon.png",
	"default_title": "We're on a news site"
    }


}
